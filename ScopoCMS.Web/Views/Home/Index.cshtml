@model List<ScopoCMS.Web.Models.Post>


@{
    ViewData["Title"] = "Home";
    int i = 0;

}

<style>
    body {
        background-color: lightgray;
    }

    @@font-face {
        src: url('../../wwwroot/css/Niladri Ratna.ttf')
    }
</style>
<div class="row" style="margin-bottom:50px;">
    <div id="carouselExampleIndicators" class="carousel slide p-md-4" style="height:400px;" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">

            @foreach (var item in Model)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img src="@Url.Content(item.ImagePath)" class="d-block w-100" style="height:400px;" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="card-title">
                                <a href="/Posts/PostDetails/@item.PostID" style="text-decoration:none; color:black;">@item.Title</a>
                            </h5>

                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item ">
                        <img src="@Url.Content(item.ImagePath)" class="d-block w-100" style="height:400px;" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="card-title">
                                <a href="/Posts/PostDetails/@item.PostID" style="text-decoration:none; color:black;">@item.Title</a>
                            </h5>

                        </div>
                    </div>
                }

                i = i + 1;
            }

        </div>
        <a class="carousel-control-prev " href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="row m-3">

    @foreach (var item in Model)
    {
        if (item.CategoryID == 1)
        {

            <div class="col-md-6 card p-md-4">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img style="height:100%;width:100%;" src="@Url.Content(item.ImagePath)" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/Posts/PostDetails/@item.PostID" style="text-decoration:none; color:black;">@item.Title</a>
                            </h5>
                            <p class="card-text">
                                @Html.Raw(item.ShortDesc)
                            </p>

                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
</div>







<div class="row m-3">
    @foreach (var item in Model)
    {
        if (item.CategoryID == 2)
        {
            <div class="col">
                <div class="card" style="height:100%">
                    <img style="height:60%;" src="@Url.Content(item.ImagePath)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/Posts/PostDetails/@item.PostID" style="text-decoration:none; color:black;">@item.Title</a>
                        </h5>
                        <p class="card-text">
                            @Html.Raw(item.ShortDesc)....
                        </p>

                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>
                </div>
            </div>

        }
    }

</div>


<div class="row m-3">
    <div class="col-md-6">

        @foreach (var item in Model)
        {
            if (item.CategoryID == 3)
            {
                <div class="row m-1">
                    <div class="col-md-12 card p-2">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img style="height:100%;width:100%;" src="@Url.Content(item.ImagePath)" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/Posts/PostDetails/@item.PostID" style="text-decoration:none; color:black;">@item.Title</a>
                                    </h5>
                                    <p class="card-text">
                                        @Html.Raw(item.ShortDesc)
                                    </p>

                                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        }


    </div>
    <div class="col-md-6 p-md-4 align-content-md-center">
        <iframe style="height:100%;width:100%;"
                src="https://www.youtube.com/embed/tgbNymZ7vqY">
        </iframe>
    </div>



</div>
