@{
}


<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" asp-controller="Section" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group">
                <label asp-for="Posts" class="control-label">Category</label>
                <select asp-for="Posts" class="form-control" asp-items="@ViewBag.list" multiple>
                    <option>Select Posts</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label">Section Name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

